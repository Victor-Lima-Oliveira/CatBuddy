@model CatBuddy.Models.ViewModelProduto

@{
    ViewData["Title"] = "CadastrarProduto";
    Layout = "~/Views/Shared/_Layout_Colaborador.cshtml";
}

<h1 class="text-yellow font-paytone-one-regular">Cadastrar Produto</h1>
<hr />
<div class="container">
    <form asp-action="CadastrarProduto" asp-controller="Produto" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="produto.CodIdProduto" Class="visually-hidden" type="number" value="0" />
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="produto.NomeProduto" class="control-label"></label>
                <input asp-for="produto.NomeProduto" class="form-control" />
                <span asp-validation-for="produto.NomeProduto" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="produto.QtdEstoque" class="control-label"></label>
                <input asp-for="produto.QtdEstoque" class="form-control" />
                <span asp-validation-for="produto.QtdEstoque" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="produto.Preco" class="control-label"></label>
                <input asp-for="produto.Preco" class="form-control money" />
                <span asp-validation-for="produto.Preco" class="text-danger "></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="produto.Idade" class="control-label"></label><i> - Opcional</i>
                <input asp-for="produto.Idade" class="form-control" placeholder="Esse produto é indicado para gatos de qual idade?" />
                <span asp-validation-for="produto.Idade" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="produto.Sabor" class="control-label"></label><i> - Opcional</i>
                <input asp-for="produto.Sabor" class="form-control" />
                <span asp-validation-for="produto.Sabor" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="produto.Cor" class="control-label"></label><i> - Opcional</i>
                <input asp-for="produto.Cor" class="form-control" />
                <span asp-validation-for="produto.Cor" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="produto.MedidasAproximadas" class="control-label"></label><i> - Opcional</i>
                <input asp-for="produto.MedidasAproximadas" class="form-control" />
                <span asp-validation-for="produto.MedidasAproximadas" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="produto.Material" class="control-label"></label><i> - Opcional</i>
                <input asp-for="produto.Material" class="form-control" />
                <span asp-validation-for="produto.Material" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="produto.Composicao" class="control-label"></label><i> - Opcional</i>
                <input asp-for="produto.Composicao" class="form-control" />
                <span asp-validation-for="produto.Composicao" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="produto.NomeCategoria" class="control-label"></label>
                <select class="form-select form-select-md" asp-for="produto.CodCategoria" id="categoria">
                    <option value="0">Selecione um Categoria</option>
                    @foreach (Categoria categoriaItem in Model.listCategoria)
                    {
                        <option value="@categoriaItem.codCategoria">@categoriaItem.nomeCategoria</option>
                    }
                </select>
                <span asp-validation-for="produto.CodCategoria" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="produto.NomeFornecedor" class="control-label"></label>
                <select class="form-select form-select-md" asp-for="produto.CodFornecedor">
                    <option value="0">Selecione um Fornecedor</option>
                    @foreach (Fornecedor fornecedorItem in Model.listFornecedor)
                    {
                        <option value="@fornecedorItem.codFornecedor">@fornecedorItem.nomeFornecedor</option>
                    }
                </select>
                <span asp-validation-for="produto.CodFornecedor" class="text-danger"></span>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="produto.ImgPath" class="control-label"></label>
                <input asp-for="produto.ImgProduto" type="file" class="form-control" />
                <span asp-validation-for="produto.ImgProduto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="produto.Descricao" class="control-label"></label>
            <textarea asp-for="produto.Descricao" class="form-control" rows="8"></textarea>
            <span asp-validation-for="produto.Descricao" class="text-danger"></span>
        </div>

        @*Adicionar o input informações nutricionais*@
            <div id="informacoesNutricionais" class="mt-3 mb-3">
               
            </div>
        
        <div class="d-flex gap-2">
            <input type="submit" value="Adicionar" class="btn btn-yellow" />
            <a asp-action="PaginaPrincipal" asp-controller="Colaborador" class="btn btn-darkFuchsia">Voltar</a>
        </div>
    </form>
</div>







<script>
    $(document).ready(function () {
        $('#informacoesNutricionais').hide(); // Oculta a div no carregamento da página
    });

    $(document).ready(function () {
        $('#categoria').change(function () {
            var categoriaSelecionada = $(this).val(); // Obter o valor selecionado

            // Verificar se a categoria selecionada deve ocultar ou mostrar a div
            if (categoriaSelecionada == 1 || categoriaSelecionada == 2 || categoriaSelecionada == 3) {
                $('#informacoesNutricionais').show(); // Oculta a div
            } else {
                $('#informacoesNutricionais').hide(); // Mostra a div
            }
        });
    });
</script>