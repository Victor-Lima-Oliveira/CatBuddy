            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.produto.CodFornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.produto.CodFornecedor)
        </dd>
        @if (!String.IsNullOrEmpty(Model.produto.MedidasAproximadas))
        {
