@model IEnumerable<CatBuddy.Models.ViewPedido>

@{
    ViewData["Title"] = "VisualizarPedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Visualizar Pedidos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.cod_id_pedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomepagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.valorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.dataPedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedido.cod_id_pedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nomepagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedido.valorTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedido.dataPedido)
                </td>
                <td>
                    @Html.ActionLink("Ver mais", "DetalharPedido", new { codPedido = item.Pedido.cod_id_pedido })
                </td>
            </tr>
        }
    </tbody>
</table>
