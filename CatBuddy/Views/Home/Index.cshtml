<script>
    document.addEventListener("DOMContentLoaded", function () {
        var carousel = document.querySelector('#carouselExample');
        var carouselInterval = null;

        function startCarousel() {
            carouselInterval = setInterval(function () {
                // Simula o clique no botão de avançar
                var nextButton = carousel.querySelector('.carousel-control-next');
                if (nextButton) {
                    nextButton.click();
                }
            }, 5000); // 3000 milissegundos = 3 segundos (intervalo de transição)
        }

        function stopCarousel() {
            clearInterval(carouselInterval);
        }

        // Inicia o carrossel automaticamente ao carregar a página
        startCarousel();

        // Pára o carrossel quando o usuário interagir manualmente com ele
        carousel.addEventListener('mouseenter', stopCarousel);
        carousel.addEventListener('mouseleave', startCarousel);
    });
</script>