@model IEnumerable<CatBuddy.Models.Categoria>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Estilo personalizado para o carrossel ocupar toda a largura da tela */

    .conteinerCarrossel {
        width: 100vw; /* Define a largura igual à largura da tela */
        position: relative; /* Mantém o conteúdo no fluxo do documento */
        left: 50%; /* Move o conteúdo para a esquerda em 50% da largura da tela */
        right: 50%; /* Move o conteúdo para a direita em 50% da largura da tela */
        transform: translateX(-50%); /* Centraliza o conteúdo horizontalmente */
    }

    .carousel-item img {
        width: 100%; /* Define a largura da imagem do carrossel como 100% da largura do contêiner */
        height: 60vh; /* Mantém a proporção da imagem */
    }

    .navbar-expand-xxl, .navbar-expand-xxl, .navbar-expand-lg, .navbar-expand-md, .navbar-expand-sm, .navbar {
        margin-bottom: 0rem !important; /* Retirar a distancia entre navbar e carrossel*/
    }

    .bi-chevron-right, .bi-chevron-left {
        font-size: 3em; /* altera o tamanho dos simbolos que mudam o carrossel*/
    }

</style>

@*Carrossel com paineis *@
<div class="conteinerCarrossel">
    <div class="containerfluid">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner ">
                <div class="carousel-item active">
                    <img src="/img/banners/Inicial.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/banners/petshop.png" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <i class="bi bi-chevron-left text-yellow"></i>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <i class="bi bi-chevron-right text-yellow"></i>
            </button>
        </div>
    </div>
</div>






