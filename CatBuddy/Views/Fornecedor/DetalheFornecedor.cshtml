@model CatBuddy.Models.ViewFornecedor

@{
    ViewData["Title"] = "DetalheFornecedor";
    Layout = "~/Views/Shared/_Layout_Colaborador.cshtml";
}

<h1>DetalheFornecedor</h1>

<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.nomeFornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.nomeFornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.cnpj)
        </dt>
        <dd class = "col-sm-10 cnpj">
            @Html.DisplayFor(model => model.Fornecedor.cnpj)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.Telefone)
        </dt>
        <dd class = "col-sm-10 phone_with_ddd">
            @Html.DisplayFor(model => model.Fornecedor.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.endereco)
        </dt>
        <dd class = "col-sm-10">
            @Model.getEnderecoCompleto()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.bairro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.bairro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.cep)
        </dt>
        <dd class = "col-sm-10 cep">
            @Html.DisplayFor(model => model.Fornecedor.cep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.municipio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.municipio)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "EditarFornecedor", new { /* id = Model.PrimaryKey */ }) |
